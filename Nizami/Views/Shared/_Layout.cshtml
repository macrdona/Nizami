<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nizami</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Nizami.styles.css" asp-append-version="true" />
    @RenderSection("Head", false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            @RenderSection("Header", false)
        </nav>
    </header>

    <!--This renders the content in the 'Body' section of the current page. For example, if user is currently on the index page
        then the content in the 'Body' section of the index page will be rendered on this div.-->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderSection("Body", false)
        </main>
    </div>

    <footer class="text-center text-lg-start bg-light text-muted">
            @RenderSection("Footer", false)
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
