@using Nizami.Infrastructure
@model Cart

<!--Displays Cart Button and Cart Total-->

<li class="nav-item">
    <form>
        <!--CartMod1 asp-route-returnurl-->
        <a class="btn btn-outline-dark"
        asp-controller="Cart" asp-action="Cart" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
            <i class="bi-cart-fill me-1"></i>
            Shopping Cart
            <span class="badge bg-dark text-white ms-1 rounded-pill">@Model.Lines.Sum(x => x.Quantity) item(s)</span>
        </a>
    </form>
</li>
