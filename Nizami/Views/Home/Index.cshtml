@{
    ViewData["Title"] = "Home Page";
}

<!--When adding a new css file, it must be enclosed on a section tag and then referenced in the layout.cshtml by using RenderSection()-->
@section Head{
	<link rel="stylesheet" href="~/css/index.css" asp-append-version="true"/>
}

@section Header{
    <!--Header and buttons-->
	<a class="navbar navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Nizami</a>
	<div class="input-group rounded">
		<input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon"/>
		<button type="button" class="btn btn-outline-primary">Search</button>
	</div>
	<div class="navbar navbar-custom ms-auto">
		<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#signup">Sign Up</button>
		<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#login">Log In</button>
	</div>
			
	<!--Sign Up Modal Form-->
	<div class="modal fade" id="signup" tabindex="-1" aria-labelledby="signupLabel" aria-hidden="true">
				
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-body">
							
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
							
					<div class="signupForm">
						<h1 class="text-center">Sign Up</h1>
								
						<form>
									
							<div class="mb-3 mt-4">
								<label for="usernameSignup" class="form-label">Username</label>
								<input type="text" class="form-control" id="usernameSignup" aria-describedby="usernameHelp">
							</div>
									
							<div class="mb-3 mt-4">
								<label for="email" class="form-label">Email address</label>
								<input type="email" class="form-control" id="email" aria-describedby="emailHelp">
							</div>
									
							<div class="mb-3">
								<label for="passwordSignup" class="form-label">Password</label>
								<input type="password" class="form-control" id="passwordSignup">
							</div>
									
							<div class="mb-3">
								<label for="passwordConfirm" class="form-label">Confirm Password</label>
								<input type="password" class="form-control" id="passwordConfirm">
							</div>
									
							<button type="submit" class="btn btn-dark">Sign Up</button>        
						</form>  
					</div>
				</div>     
			</div>  
		</div>
	</div> 
			
	<!--Login Modal Form-->
	<div class="modal fade" id="login" tabindex="-1" aria-labelledby="loginLabel" aria-hidden="true">
				
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-body">
							
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
							
					<div class="loginForm">
						<h1 class="text-center">Log In</h1>
								
						<form>
									
							<div class="mb-3 mt-4">
								<label for="usernameLogin" class="form-label">Username</label>
								<input type="text" class="form-control" id="usernameLogin" aria-describedby="usernameHelp">
							</div>
									
							<div class="mb-3">
								<label for="passwordLogin" class="form-label">Password</label>
								<input type="password" class="form-control" id="passwordLogin">
							</div>
									
							<button type="submit" class="btn btn-dark">Log In</button>
							<p>Not a member?<button type="button" class="btn btn-primary" id="modalClose" data-bs-target="#signup" data-bs-toggle="modal">Sign Up Now</button></p>
						</form>  
					</div>
				</div>     
			</div>  
		</div>
	</div>
}

@section Body{
	<div class="container-sm">
		<div class="row">
			<h2 class="text-center">Products</h2>
			@model IEnumerable<Product>
			@foreach (var p in Model)
			{
				<div class="col-sm-4" id="item">
					<h3>@p.Name</h3>
					@p.Description
					<h4>@p.Price.ToString("c")</h4>
				</div>
			}
		</div>
	</div>
	<!--<div class="bg-image"></div>-->

	<script src="~/js/index.js" asp-append-version="true" defer></script>
}

